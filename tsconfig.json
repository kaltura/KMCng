{
  "compilerOptions": {
    "baseUrl" : ".",
    "target": "ES5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "paths": {
      "*": ["src/shared/*"]
    },
    "noEmitHelpers": true,
    "typeRoots" : [
      "./types"
    ]
  },
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compileOnSave": false,
  "buildOnSave": false

}
